---
import { Profile } from "../components/Profile";
import { About } from "../components/About";
import { Experience } from "../components/Experience";
import { Projects } from "../components/Projects";
import { Skills } from "../components/Skills";
import { Links } from "../components/Links";
import { Photography } from "../components/Photography";
import { Footer } from "../components/Footer";
import "../styles/tailwind.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="Astro" />
    <title>Ryan Johnson - Developer Home Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      crossorigin="anonymous"
    />
    <script is:inline>
      // Apply theme before page renders to prevent flash of content
      (function () {
        const userPreference = localStorage.getItem("color-theme");
        const hour = new Date().getHours();
        const isDarkTime = hour >= 19 || hour < 7;

        if (userPreference === "dark" || (!userPreference && isDarkTime)) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-gray-50 via-slate-50 to-stone-50 dark:from-gray-900 dark:via-slate-800 dark:to-stone-900 min-h-screen flex flex-col"
  >
    <!-- Dark mode toggle -->
    <button
      id="theme-toggle"
      type="button"
      class="fixed top-4 right-4 z-50 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
    >
      <svg
        id="theme-toggle-dark-icon"
        class="hidden w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
        ></path>
      </svg>
      <svg
        id="theme-toggle-light-icon"
        class="hidden w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
          fill-rule="evenodd"
          clip-rule="evenodd"></path>
      </svg>
    </button>

    <div class="container mx-auto px-4 py-8 max-w-6xl flex-1 space-y-8">
      <div id="profile-section">
        <Profile client:load />
      </div>

      <div id="about-section">
        <About client:load />
      </div>

      <div id="main-content-grid" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div id="left-column" class="lg:col-span-2 space-y-8">
          <div id="projects-section">
            <Projects client:load />
          </div>
          <div id="experience-section">
            <Experience client:load />
          </div>
        </div>
        <div id="right-column" class="space-y-8">
          <div id="links-section">
            <Links client:load />
          </div>
          <div id="skills-section">
            <Skills client:load />
          </div>
        </div>
      </div>

      <div id="photography-section">
        <Photography client:load />
      </div>
    </div>

    <Footer client:load />

    <script>
      const themeToggleDarkIcon = document.getElementById(
        "theme-toggle-dark-icon",
      );
      const themeToggleLightIcon = document.getElementById(
        "theme-toggle-light-icon",
      );
      const themeToggleBtn = document.getElementById("theme-toggle");

      // Sync icons with initial theme
      function syncIcons() {
        if (document.documentElement.classList.contains("dark")) {
          themeToggleDarkIcon.classList.remove("hidden");
          themeToggleLightIcon.classList.add("hidden");
        } else {
          themeToggleLightIcon.classList.remove("hidden");
          themeToggleDarkIcon.classList.add("hidden");
        }
      }

      // Initialize
      syncIcons();

      themeToggleBtn.addEventListener("click", function () {
        const isCurrentlyDark =
          document.documentElement.classList.contains("dark");

        if (isCurrentlyDark) {
          document.documentElement.classList.remove("dark");
          localStorage.setItem("color-theme", "light");
        } else {
          document.documentElement.classList.add("dark");
          localStorage.setItem("color-theme", "dark");
        }

        syncIcons();
      });

      // Auto check for theme shift (e.g. at sunrise/sunset) if no override
      setInterval(() => {
        if (!localStorage.getItem("color-theme")) {
          const hour = new Date().getHours();
          const shouldBeDark = hour >= 19 || hour < 7;
          const isDark = document.documentElement.classList.contains("dark");

          if (shouldBeDark !== isDark) {
            if (shouldBeDark) document.documentElement.classList.add("dark");
            else document.documentElement.classList.remove("dark");
            syncIcons();
          }
        }
      }, 60000);

      // Randomize patina backgrounds for each instance
      function randomizePatina() {
        const targets = document.querySelectorAll(
          ".section-heading, .btn-primary",
        );
        targets.forEach((el) => {
          el.style.setProperty(
            "--patina-angle-1",
            Math.floor(Math.random() * 360) + "deg",
          );
          el.style.setProperty(
            "--patina-angle-2",
            Math.floor(Math.random() * 360) + "deg",
          );
          el.style.setProperty(
            "--patina-angle-3",
            Math.floor(Math.random() * 360) + "deg",
          );
        });
      }

      // Initialize randomization
      randomizePatina();

      // Also randomize on theme toggle to refresh the look
      themeToggleBtn.addEventListener("click", () => {
        setTimeout(randomizePatina, 10);
      });
    </script>
  </body>
</html>
